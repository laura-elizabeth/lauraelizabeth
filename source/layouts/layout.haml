!!!
%html
  %head
    %title= current_page.data.title || "Laurium Design"
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "Laurium Design", name: "description"}/
    %meta{content: "laurium, design", name: "keywords"}/
    %meta{content: "Laurium Design", name: "author"}/
    %meta{content: "Laurium Design", name: "copyright"}/
    %meta{content: "index, follow", name: "robots"}/
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=no", name: "viewport"}/
    %link{rel: "shortcut icon", href: "/images/favicon.ico"}
    %link{rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Merriweather:400,400italic,300italic,300,700", type: "text/css"}
    %link{rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Merriweather+Sans:400,700", type: "text/css"}

    = stylesheet_link_tag "main"
    = partial("/partials/javascripts/head")

  %body{class: page_classes}
    = partial("/partials/header")
    = yield
    = partial("/partials/footer")

    = partial("/partials/javascripts/bottom")
    = javascript_include_tag "main"
